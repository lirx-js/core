{
  "name": "ts-lib-seed",
  "version": "1.2.0",
  "description": "Seed to build a library",
  "main": "index.js",
  "scripts": {
    "build": "yarn run build:package",
    "dev": "yarn run dev:package",
    "": "",
    "_________________BUILD_________________": "",
    "build:package": "echo 'build:package' && yarn run clean:dist && yarn run build:package:tcs && yarn run assemble:package",
    "build:package:tcs": "echo 'build:package:tcs' && yarn run build:package:tcs:module:mjs && yarn run build:package:tcs:cjs:cjs",
    "assemble:package": "echo 'assemble:package' && node tools/package/assemble-package.js",
    "______MJS_____": "",
    "build:package:tcs:module:mjs": "echo 'build:package:tcs:module:mjs' && yarn run build:package:tcs:module && yarn run build:package:rename:mjs && yarn run build:package:resolve:mjs",
    "build:package:tcs:module": "echo 'build:package:tcs:module' && tsc -p tsconfig/tsconfig.build.package.module.json",
    "build:package:rename:mjs": "echo 'build:package:rename:mjs' && node tools/package/rename/rename-mjs.js",
    "build:package:resolve:mjs": "echo 'build:package:resolve:mjs' && node tools/package/resolve/resolve-node-modules.js --mjs",
    "______CJS_____": "",
    "build:package:tcs:cjs:cjs": "echo 'build:package:tcs:cjs:cjs' && yarn run build:package:tcs:cjs && yarn run build:package:rename:cjs && yarn run build:package:resolve:cjs",
    "build:package:tcs:cjs": "echo 'build:package:tcs:cjs' && tsc -p tsconfig/tsconfig.build.package.cjs.json",
    "build:package:rename:cjs": "echo 'build:package:rename:cjs' && node tools/package/rename/rename-cjs.js",
    "build:package:resolve:cjs": "echo 'build:package:resolve:cjs' && node tools/package/resolve/resolve-node-modules.js --cjs",
    "_________________DEV_________________": "",
    "dev:package": "yarn run clean:dist && yarn run dev:package:tcs",
    "dev:package:tcs": "yarn run dev:package:tcs:module & yarn run dev:package:tcs:cjs",
    "dev:package:tcs:module": "yarn run dev:package:tcs:module:linux",
    "dev:package:tcs:module:linux": "tsc-watch -p tsconfig/tsconfig.build.package.module.json --onSuccess 'yarn run dev:package:tcs:module:onsuccess'",
    "dev:package:tcs:module:windows": "tsc-watch -p tsconfig/tsconfig.build.package.module.json --onSuccess \\\"yarn run dev:package:tcs:module:onsuccess\\\"",
    "dev:package:tcs:module:onsuccess": "yarn run build:package:rename:mjs && yarn run build:package:resolve:mjs && yarn run assemble:package",
    "dev:package:tcs:cjs": "yarn run dev:package:tcs:cjs:linux",
    "dev:package:tcs:cjs:windows": "tsc-watch -p tsconfig/tsconfig.build.package.cjs.json --onSuccess \\\"yarn run dev:package:tcs:cjs:onsuccess\\\"",
    "dev:package:tcs:cjs:linux": "tsc-watch -p tsconfig/tsconfig.build.package.cjs.json --onSuccess 'yarn run dev:package:tcs:cjs:onsuccess'",
    "dev:package:tcs:cjs:onsuccess": "yarn run build:package:rename:cjs",
    "_________________INDEX_FILES_________________": "",
    "comment:index-files": "node tools/index/comment-index-files.js",
    "uncomment:index-files": "node tools/index/comment-index-files.js --uncomment",
    "generate:index-files": "node tools/index/generate-index-files.js",
    "_________________MANAGE_PACKAGE_______________": "",
    "publish:package": "cd ../dist && yarn publish --access public",
    "link:package": "cd ../dist && yarn link",
    "_________________OTHERS_________________": "",
    "clean:dist": "echo 'clean:dist' && shx rm -rf ./dist",
    "generate:toc": "markdown-toc ../README.md",
    "comment:build:package": "yarn run uncomment:index-files && yarn run build:package && yarn run comment:index-files",
    "ncu": "npx npm-check-updates"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lifaon74/ts-lib-seed"
  },
  "keywords": [],
  "author": "Valentin Richard",
  "license": "MIT",
  "access": "public",
  "devDependencies": {
    "acorn": "^8.7.0",
    "acorn-walk": "^8.2.0",
    "astring": "^1.8.1",
    "markdown-toc": "^1.2.0",
    "shx": "^0.3.4",
    "tsc-watch": "^5.0.3",
    "tslib": "^2.3.1",
    "typescript": "4.6.3"
  },
  "packageManager": "yarn@3.2.0"
}
